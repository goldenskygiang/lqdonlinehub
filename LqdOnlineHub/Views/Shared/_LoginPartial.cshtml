@using System.Security.Principal

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item" style="margin-right : 1em;">
            <span class="navbar-text text-light">@User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <a class="btn btn-danger" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Đăng xuất</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Đăng nhập</a>
        </li>
    }
</ul>

@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Member" asp-action="Index">Danh sách đoàn viên</a>
        </li>
    </ul>
}